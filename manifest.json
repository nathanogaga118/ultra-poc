{
  "manifest_version": 3,
  "name": "Phantom Redirect Code Catcher",
  "version": "1.0",
  "description": "Captures OAuth code and forwards to webhook.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "callback.html",
    "default_title": "Phantom OAuth PoC"
  },
  "web_accessible_resources": [
    {
      "resources": ["callback.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
